 <!-- SERVICE SECTION START-->
<section class="products" id="products">
  <h2><span>OUR</span> PRODUCTS</h2>
  <p>Kami Menawarkan Produk dengan kualitas terbaik dan sudah terpercaya fungsinya </p>
  <div class="row">
    <%productsList.forEach(product => {%>
      <div class="product-card">
        <div class="product-image">
          <img src= <%=product.image %> alt="Product 1">
        </div>
        <div class="product-contnt">
          <h3><%=product.name%></h3>
          <div class="product-stars">
            <i data-feather="star" class="star-full"></i>
            <i data-feather="star" class="star-full"></i>
            <i data-feather="star" class="star-full"></i>
            <i data-feather="star" class="star-full"></i>
            <i data-feather="star"></i>
          </div>
          <div class="product-price">IDR <%=product.price%>K <span>IDR <% var total = product.price + 10%> <%=total%>K</span></div>
        </div>
      </div>
    <%})%>
  </div>
</section>

<!-- SERVICE SECTION END -->

    <!-- ORDER SECTION START-->
    <section id="order" class="contact">
      <h2><span>Order</span> Form</h2>
      <div class="row">
        <form action="/" method="post" id="orderForm">
          <div class="input-group">
            <i class="bi bi-person"></i>
            <input type="text" placeholder="Nama" name="nama">
          </div>
          <div class="input-group">
            <i class="bi bi-envelope"></i>
            <input type="text" placeholder="Email" name="email">
          </div>
          <div class="input-group">
            <i class="bi bi-telephone"></i>
            <input type="text" placeholder="No hp" name="phone">
          </div>
          <div class="msg">
            <label>Order</label>
            <textarea placeholder="Order Detail (Input what you want to order and the quantity of the order, Ex: Router x1, Modem x2)" name="orderDetail"></textarea>
          </div>
          <button type="submit" class="btn">Send Message</button>
        </form>
      </div>
    </section>
    <!-- ORDER SECTION END-->

    <!-- FOOTER START-->
